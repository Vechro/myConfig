{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "number-leading-zero": "never",
        "unit-blacklist": [
            "cm",
            "mm",
            "q",
            "in",
            "pc",
            "pt"
        ],
        "selector-list-comma-newline-after": "always",
        "no-missing-end-of-source-newline": null
    }
}